{

	"manifest_version": 2,
	"name": "10Buy",
	"version": "1.0.0",
	"description": "הוסף מוצרים ישירות מ-eBay לחנות שלך ב-10Buy.",
	"author": "Maor Levy",

	"icons": {
		"16": "icons/10BUYicon.png",
		"32": "icons/10BUYicon.png",
		"34": "icons/10BUYicon.png",
		"48": "icons/10BUYicon.png",
		"128": "icons/10BUYicon.png"
	},
	
    "content_scripts": [
        {
            "matches": ["https://*.10buy.co.il/admin/*", "https://*.10buy.co.il/admin"],
			"js": ["scripts/store_script.js"]
        },
        {
            "matches": ["https://www.ebay.com/itm/*"],
			"js": ["scripts/ebay_script.js"],
			"run_at": "document_end"
        }
	],
	
	"options_ui": {
		"page": "options.html"
	},
	
	"permissions": [
		"https://*.10buy.co.il/*",
		"https://www.ebay.com/itm/*",
		"webRequest",
		"storage",
		"notifications"
	],

	"minimum_chrome_version": "60.0"
	
}
	